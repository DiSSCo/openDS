{
  "$id": "identifications",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "identification_type": {
      "type": "string"
    },
    "taxon_formula": {
      "type": "string"
    },
    "verbatim_identification": {
      "type": "string"
    },
    "type_status": {
      "type": "string"
    },
    "identified_by": {
      "type": "string"
    },
    "identified_by_id": {
      "type": "string"
    },
    "date_identified": {
      "type": "string"
    },
    "identification_references": {
      "type": "string"
    },
    "identification_verification_status": {
      "type": "boolean"
    },
    "identification_remarks": {
      "type": "string"
    },
    "type_designation_type": {
      "type": "string"
    },
    "type_designated_by": {
      "type": "string"
    },
    "taxon_identifications": {
      "type": "object",
