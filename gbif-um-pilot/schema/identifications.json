          "taxon_source": {
            "type": "string"
          },
          "taxon_remarks": {
            "type": "string"
          },
          "kingdom": {
            "type": "string"
          },
          "phylum": {
            "type": "string"
          },
          "class": {
            "type": "string"
          },
          "order": {
            "type": "string"
          },
          "family": {
            "type": "string"
          },
          "subfamily": {
            "type": "string"
          },
          "genus": {
            "type": "string"
          },
          "subgenus": {
            "type": "string"
          },
          "accepted_scientific_name": {
            "type": "string"
          }
        }
      }
    }
  }
