{
  "$schema": "http://json-schema.org/draft-2020-12/schema#",
  "type": "object",
  "properties": {
    "ods:id": { "type": "string" },
    "ods:type": { "const": "Annotation" },
    "version": { "type": "integer" },
    "oa:motivation": {
      "ods:type": "string",
      "enum": ["ods:adding", "oa:assessing", "oa:editing", "oa:commenting"]
    },
    "oa:motivatedBy": { "type": "string" },
    "oa:target": {
      "ods:type": "object",
      "properties": {
        "ods:id": { "type": "string" },
        "ods:type": { "type": "string" },
      },
      "required": ["id", "type"]
    },
    "oa:body": {
      "ods:type": "object",
      "properties": {
        "ods:type": { "type": "string" },
        "oa:value": { "type": "array" },
        "dcterms:reference": { "type": "string" },
        "ods:score": { "type": "number", "minimum": 0, "maximum": 1 },
        "ods:deletedOn": { "type": "string", "format": "date" } 
      },
      "required": ["type", "value"]
    },
    "oa:creator": {
      "ods:type": "object",
      "properties": {
        "ods:type": { "type": "string" },
        "foaf:name": { "type": "string" },
        "ods:id": { "type": "string" }
      },
      "required": ["type", "name", "id"]
    },
    "dcterms:created": { "type": "string", "format": "date" },
    "as:generator": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" }
      },
      "required": ["id", "name", "type"]
    },
    "generated": { "type": "string" },
    "aggregateRating": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "ratingCount": { "type": "number" },
        "ratingValue": { "type": "number" }
      },
      "required": ["type", "ratingCount", "ratingValue"]
    }
  },
  "required": [
    "id",
    "type",
    "version",
    "motivation",
    "target",
    "body",
    "creator",
    "created",
    "generator",
    "generated"
  ]
}
