{
  "$schema": "http://json-schema.org/draft-2020-12/schema#",
  "type": "object",
  "properties": {
    "ods:id": {
      "type": "string"
    },
    "ods:type": {
      "enum": [
        "Annotation"
      ]
    },
    "version": {
      "type": "integer"
    },
    "oa:motivation": {
      "enum": [
        "ods:adding",
        "oa:assessing",
        "oa:editing",
        "oa:commenting"
      ]
    },
    "oa:motivatedBy": {
      "type": "string"
    },
    "oa:target": {
      "type": "object",
      "properties": {
        "ods:id": {
          "type": "string"
        },
        "ods:type": {
          "type": "string"
        },
        "oa:selector": {
          "type": "object",
          "properties": {
            "ods:type": {
              "enum": [
                "FieldValueSelector",
                "ClassValueSelector",
                "FragmentSelector"
              ]
            },
            "ods:selectorFieldOrClass": {
              "type": "string"
            },
            "ac:hasROI": {
              "type": "object",
              "properties": {
                "ac:xFrac": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "ac:yFrac": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "ac:widthFrac": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "ac:heightFrac": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "required": [
                "ac:xFrac",
                "ac:yFrac",
                "ac:widthFrac",
                "ac:heightFrac"
              ]
            },
            "dcterms:conformsTo": {
              "type": "string"
            }
          },
          "required": [
            "ods:type"
          ]
        }
      },
      "required": [
        "ods:id",
        "ods:type"
      ]
    }
  },
  "oa:body": {
    "type": "object",
    "properties": {
      "ods:type": {
        "type": "string"
      },
      "oa:value": {
        "type": "array"
      },
      "dcterms:reference": {
        "type": "string"
      },
      "ods:score": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    },
    "required": [
      "ods:type",
      "oa:value"
    ]
  },
  "oa:creator": {
    "type": "object",
    "properties": {
      "ods:type": {
        "type": "string"
      },
      "foaf:name": {
        "type": "string"
      },
      "ods:id": {
        "type": "string"
      }
    },
    "required": [
      "ods:id",
      "ods:type"
    ]
  },
  "dcterms:created": {
    "type": "string",
    "format": "date-time"
  },
  "ods:deletedOn": {
    "type": "string",
    "format": "date-time"
  },
  "as:generator": {
    "type": "object",
    "properties": {
      "ods:id": {
        "type": "string"
      },
      "foaf:name": {
        "type": "string"
      },
      "ods:type": {
        "type": "string"
      }
    },
    "required": [
      "ods:id",
      "ods:type"
    ]
  },
  "aggregateRating": {
    "type": "object",
    "properties": {
      "ods:type": {
        "type": "string"
      },
      "ratingCount": {
        "type": "number"
      },
      "ratingValue": {
        "type": "number"
      }
    },
    "required": [
      "ods:type",
      "ratingCount",
      "ratingValue"
    ]
  },
  "required": [
    "ods:id",
    "ods:type",
    "oa:version",
    "oa:motivation",
    "oa:target",
    "oa:body",
    "oa:creator",
    "dcterms:created",
    "as:generator"
  ]
}
