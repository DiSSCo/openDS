{
  "$id": "root",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "ods:id": {
      "type": "string",
      "description": "The unique digital identifier of the object",
      "pattern": "https:\/\/hdl.handle.net\/20.5000.1025\/(.){3}-(.){3}-(.){3}",
      "examples": [
        "https://doi.org/10.22/XXX-XXX-XXX"
      ],
      "$comment": "Not sure if we should use the ods ontology"
    },
    "ods:version": {
      "type": "integer",
      "description": "The version of the object, each change generates a new version",
      "minimum": 1,
      "examples": [
        1
      ],
      "$comment": "Not officially part of W3C Web annotation"
    },
    "dcterms:created": {
      "type": "string",
      "description": "The timestamp that the object version was created in DiSSCo",
      "format": "date-time",
      "$comment": "Or use the oa ontology, which is more in line with W3C?"
    },
    "ods:type": {
      "type": "string",
      "description": "The FDO type of the object",
      "constant": "Annotation",
      "$comment": "Not sure if we should use the ods ontology"
    },
    "oa:motivation": {
      "type": "string",
      "description": "The FDO type of the object",
      "enum": [
        "oa:assessing",
        "oa:bookmarking",
        "oa:classifying",
        "oa:commenting",
        "oa:describing",
        "oa:editing",
        "oa:highlighting",
        "oa:identifying",
        "oa:linking",
        "oa:moderating",
        "oa:questioning",
        "oa:replying",
        "oa:tagging"
      ]
    },
    "dcterms:creator": {
      "type": "object",
      "properties": {
        "???:id": {
          "type": "string",
          "description": "Contains the orcid (person), ror (organisation) or the PID (software agent)"
        },
        "???:type": {
          "type": "string",
          "enum": [
            "foaf:Person",
            "foaf:Organisation",
            "oa:SoftwareAgent"
          ]
        },
        "foaf:name": {
          "type": "string"
        }
      },
      "required": [
        "???:id",
        "???:type"
      ]
    },
    "dcterms:issued": {
      "type": "string",
      "format": "date-time",
      "description": "The agent responsible for creating the resource."
    },
    "as:generator": {
      "type": "object",
      "properties": {
        "???:id": {
          "type": "string",
          "description": "Contains the orcid (person), ror (organisation) or the PID (software agent)"
        },
        "???:type": {
          "type": "string",
          "enum": [
            "foaf:Person",
            "foaf:Organisation",
            "oa:SoftwareAgent"
          ]
        },
        "foaf:name": {
          "type": "string"
        }
      },
      "required": [
        "???:id",
        "???:type"
      ]
    },
    "target": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "url",
          "description": "The PID of the object the annotation is linked to"
        },
        "type": {
          "type": "string",
          "description": "The type of object the annotation is linked to"
        },
        "individualProp": {
          "type": "string",
          "description": "The individual property within the object the annotation is linked to"
        }
      },
      "required": [
        "id",
        "type"
      ]
    },
    "body": {
      "type": "object",
      "$comment": "Needs more refinement",
      "properties": {
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "values"
      ]
    }
  },
  "required": [
    "ods:id",
    "ods:version",
    "dcterms:created",
    "dcterms:creator",
    "as:generator",
    "dcterms:issued",
    "target",
    "body"
  ]
}