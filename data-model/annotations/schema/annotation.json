{
  "$schema": "http://json-schema.org/draft-2020-12/schema#",
  "type": "object",
  "properties": {
    "ods:id": { "type": "string" },
    "ods:type": { "const": "Annotation" },
    "version": { "type": "integer" },
    "oa:motivation": {
      "type": "string",
      "enum": ["ods:adding", "oa:assessing", "oa:editing", "oa:commenting"]
    },
    "oa:motivatedBy": { "type": "string" },
    "oa:target": {
      "type": "object",
      "properties": {
        "ods:id": { "type": "string" },
        "ods:type": { "type": "string" },
        "selector": {
          "type": "object",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": { "const": "fieldValueSelector" },
                "ods:field": { "type": "string" }
              },
              "required": ["ods:type", "ods:field"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "classValueSelector" },
                "oa:class": { "type": "string" }
              },
              "required": ["ods:type", "oa:class"]
            },
            {
              "type": "object",
              "properties": {
                "ods:type": { "const": "FragmentSelector" },
                "ac:hasROI": {
                  "type": "object",
                  "properties": {
                    "ac:xFrac": { "type": "number", "minimum": 0, "maximum": 1 },
                    "ac:yFrac": { "type": "number", "minimum": 0, "maximum": 1 },
                    "ac:widthFrac": { "type": "number", "minimum": 0, "maximum": 1 },
                    "ac:heightFrac": { "type": "number", "minimum": 0, "maximum": 1 }
                  },
                  "required": ["ac:xFrac", "ac:yFrac", "ac:widthFrac", "ac:heightFrac"]
                },
                "dcterms:conformsTo": { "type": "string" }
              },
              "required": ["oa:type", "oa:selector"]
            }
          ]
        }
      },
      "required": ["ods:id", "ods:type"]
    },
    "oa:body": {
      "type": "object",
      "properties": {
        "ods:type": { "type": "string" },
        "oa:value": { "type": "array" },
        "dcterms:reference": { "type": "string" },
        "ods:score": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["ods:type", "oa:value"]
    },
    "oa:creator": {
      "type": "object",
      "properties": {
        "ods:type": { "type": "string" },
        "foaf:name": { "type": "string" },
        "ods:id": { "type": "string" }
      },
      "required": ["ods:id", "ods:type"]
    },
    "dcterms:created": { "type": "string", "format": "date-time" },
     "ods:deletedOn": { "type": "string", "format": "date-time" } ,
    "as:generator": {
      "type": "object",
      "properties": {
        "ods:id": { "type": "string" },
        "foaf:name": { "type": "string" },
        "ods:type": { "type": "string" }
      },
      "required": ["ods:id", "ods:type"]
    },
    "aggregateRating": {
      "type": "object",
      "properties": {
        "ods:type": { "type": "string" },
        "ratingCount": { "type": "number" },
        "ratingValue": { "type": "number" }
      },
      "required": ["ods:type", "ratingCount", "ratingValue"]
    }
  },
  "required": [
    "ods:id",
    "ods:type",
    "oa:version",
    "oa:motivation",
    "oa:target",
    "oa:body",
    "oa:creator",
    "dcterms:created",
    "as:generator"
  ]
}
