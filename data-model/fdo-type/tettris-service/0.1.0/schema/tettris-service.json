{
  "$id": "https://schemas.dissco.tech/schemas/fdo-type/tettris-service/0.1.0/tettris-service.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "https://docs.google.com/document/d/1jbeVkUgoKXEmXKGlaHfJVxNRBk_aNBMSNdgPzLSqjGc/edit?usp=sharing",
  "title": "TaxonomicService",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "examples": [
        "Bombus identification service"
      ]
    },
    "description": {
      "type": "string",
      "examples": [
        "An identification service that can help identify Bombus"
      ]
    },
    "logo": {
      "type": "string",
      "examples": [
        "logo.uri"
      ]
    },
    "state": {
      "enum": [
        "Proposed",
        "Accepted",
        "Rejected"
      ],
      "$comment": "Internal field"
    },
    "eoscServiceId": {
      "type": "string",
      "$comment": "Unique identifier, ECP.BAI.0"
    },
    "quality": {
      "type": "string",
      "examples": [
        "Quickly identifies Bombus"
      ],
      "$comment": "How does this differ from description?"
    },
    "published": {
      "type": "string",
      "format": "date",
      "examples": [
        "2023-10-26"
      ]
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "examples": [
            "John Doe"
          ]
        },
        "orcid": {
          "type": "string",
          "examples": [
            "0000-0000-0000-0001"
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "maintainer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "examples": [
            "John Doe"
          ]
        },
        "orcid": {
          "type": "string",
          "examples": [
            "0000-0000-0000-0001"
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "contactEmail": {
      "type": "string",
      "format": "email",
      "examples": [
        "info@information.com"
      ]
    },
    "license": {
      "type": "string",
      "examples": [
        "CC-0"
      ]
    },
    "websiteUrl": {
      "type": "string",
      "examples": [
        "https://info.taxonomy.com"
      ]
    },
    "sourceUrl": {
      "type": "string",
      "$comment": "points to PID for the virtual collection",
      "examples": [
        "https://hdl.handle.net/10.22/111-AAA"
      ]
    },
    "paidService": {
      "type": "boolean"
    },
    "usageConditions": {
      "type": "string",
      "examples": [
        "Credit author"
      ]
    },
    "documentationUrl": {
      "type": "string",
      "examples": [
        "https://info.taxonomy.com"
      ]
    },
    "software": {
      "type": "object",
      "properties": {
        "sourceUrl": {
          "type": "string",
          "examples": [
            "https://info.taxonomy.com"
          ]
        },
        "dependencies": {
          "type": "array",
          "$comment": "should these be source/github URLs?",
          "items": {
            "type": "string"
          },
          "examples": [
            [
              "https://info.taxonomy.com"
            ]
          ]
        },
        "depreciated": {
          "type": "boolean"
        },
        "bugReport": {
          "type": "array",
          "$comment": "should these be source/github URLs?",
          "items": {
            "type": "string"
          },
          "examples": [
            [
              "Bug report"
            ]
          ]
        }
      }
    },
    "funding": {
      "type": "string",
      "example": "Funded by XYZ"
    },
    "facilityLocation": {
      "type": "string",
      "examples": [
        "Barcelona"
      ]
    },
    "taxonomicScope": {
      "type": "string",
      "examples": [
        "Bombus"
      ]
    },
    "media": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "examples": [
        [
          "https://media-repository.com/123"
        ]
      ]
    }
  },
  "required": [
    "title",
    "state",
    "published",
    "author",
    "maintainer",
    "contactEmail",
    "license",
    "sourceUrl",
    "paidService",
    "taxonomicScope"
  ]
}