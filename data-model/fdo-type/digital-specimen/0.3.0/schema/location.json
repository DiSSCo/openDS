{
  "$id": "https://schemas.dissco.tech/schemas/fdo-type/digital-specimen/0.3.0/location.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Location Version 0.3.0",
  "type": "object",
