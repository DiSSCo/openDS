        "dwc:georeferenceRemarks": {
          "type": "string",
          "description": "https://rs.tdwg.org/dwc/terms/georeferenceRemarks",
          "examples": [
            "Assumed distance by road (Hwy. 101)"
          ]
        },
        "ods:preferredSpatialRepresentation": {
          "type": "string"
        }
