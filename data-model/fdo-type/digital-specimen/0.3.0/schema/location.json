    "dwc:stateProvince": {
      "type": "string",
      "description": "https://rs.tdwg.org/dwc/terms/stateProvince",
      "examples": [
        "Montana"
      ]
    },
    "dwc:county": {
      "type": "string",
      "description": "https://rs.tdwg.org/dwc/terms/county",
      "examples": [
        "Los Lagos"
      ]
